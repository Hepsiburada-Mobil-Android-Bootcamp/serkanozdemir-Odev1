<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <!--Secreen 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_rectangle2"
            android:backgroundTint="@color/purple_700"
            android:text="Secreen 1"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"
            android:textColor="#FFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    <!--Secreen 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_rectangle2"
            android:backgroundTint="@color/purple_700"
            android:text="Secreen 2"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"
            android:textColor="#FFFF"
            app:layout_constraintTop_toBottomOf="@+id/btnSc1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    <!--Live Data -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLiveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_rectangle2"
            android:backgroundTint="@color/purple_700"
            android:text="Live Data"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"
            android:textColor="#FFFF"
            app:layout_constraintTop_toBottomOf="@+id/btnSc2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>